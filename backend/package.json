{
  "name": "claude-serverless-backend",
  "version": "1.0.0",
  "description": "Backend Lambda functions for Claude Serverless Chat",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run package",
    "clean": "rimraf dist",
    "compile": "tsc",
    "package": "npm run package:chat && npm run package:files && npm run package:layers",
    "package:chat": "cd dist/functions/chat && zip -r ../../chat-handler.zip .",
    "package:files": "cd dist/functions/file-processor && zip -r ../../file-processor.zip .",
    "package:layers": "npm run build:layers && cd layers && zip -r ../dist/dependencies.zip .",
    "build:layers": "mkdir -p layers/nodejs && cp package.json layers/nodejs/ && cd layers/nodejs && npm install --production",
    "deploy": "npm run build && echo 'Backend compiled and packaged'",
    "dev": "nodemon --exec ts-node src/functions/chat/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.454.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.454.0",
    "@aws-sdk/client-dynamodb": "^3.454.0",
    "@aws-sdk/client-s3": "^3.454.0",
    "@aws-sdk/lib-dynamodb": "^3.454.0",
    "csv-parse": "^5.5.2",
    "mammoth": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}